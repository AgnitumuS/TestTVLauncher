<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appgreen1">

    <com.explame.testtvlauncher.customtvrecyclerview.CustomLineRecyclerView
        android:id="@+id/id_recycler_line"
        android:layout_width="@dimen/dimen_200x"
        android:layout_height="match_parent"
        android:focusable="true"/>

    <com.explame.testtvlauncher.customtvrecyclerview.CustomGridRecyclerView
        android:id="@+id/id_recycler_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/id_recycler_line"
        android:focusable="true"/>

</RelativeLayout>